<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Role Selection Card Style -->
    <Style x:Key="RoleCardStyle" TargetType="materialDesign:Card">
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="400"/>
        <Setter Property="Padding" Value="32"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="UniformCornerRadius" Value="4"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Student Card in List Style -->
    <Style x:Key="StudentListCardStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#EEEEEE"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F5F5F5"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Tool Panel Card Style -->
    <Style x:Key="ToolPanelCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SidebarGradientBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <!-- Screen Thumbnail Card -->
    <Style x:Key="ScreenThumbnailStyle" TargetType="Border">
        <Setter Property="Background" Value="#252525"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Margin" Value="4"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource TeacherPrimaryBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Main Content Card -->
    <Style x:Key="MainContentCardStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
    </Style>

    <!-- Info Card Style -->
    <Style x:Key="InfoCardStyle" TargetType="Border">
        <Setter Property="Background" Value="#E3F2FD"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

</ResourceDictionary>
