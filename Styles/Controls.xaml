<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <!-- Search TextBox Style -->
    <Style x:Key="SearchTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="materialDesign:TextFieldAssist.HasClearButton" Value="True"/>
        <Setter Property="materialDesign:HintAssist.Hint" Value="Tìm kiếm học sinh..."/>
        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{StaticResource TeacherPrimaryBrush}"/>
    </Style>
    
    <!-- Status Indicator Style -->
    <Style x:Key="OnlineIndicatorStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="10"/>
        <Setter Property="Height" Value="10"/>
        <Setter Property="Fill" Value="{StaticResource OnlineBrush}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsOnline}" Value="False">
                <Setter Property="Fill" Value="{StaticResource OfflineBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <!-- Panel Header Style -->
    <Style x:Key="PanelHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>
    
    <!-- Section Header Style -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        <Setter Property="Margin" Value="0,16,0,8"/>
    </Style>
    
    <!-- Tab Header Style -->
    <Style x:Key="TabHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Status Bar Style -->
    <Style x:Key="StatusBarStyle" TargetType="Border">
        <Setter Property="Background" Value="#F8F9FA"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="16,0"/>
    </Style>
    
    <!-- ListView Style -->
    <Style x:Key="StudentListViewStyle" TargetType="ListView" BasedOn="{StaticResource MaterialDesignListView}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
        <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
    </Style>
    
    <!-- Progress Ring Style -->
    <Style x:Key="LoadingProgressStyle" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="IsIndeterminate" Value="True"/>
        <Setter Property="Foreground" Value="{StaticResource TeacherPrimaryBrush}"/>
    </Style>
    
    <!-- Chat Bubble Style - Sent -->
    <Style x:Key="SentMessageBubbleStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource TeacherPrimaryBrush}"/>
        <Setter Property="CornerRadius" Value="16,16,4,16"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="48,4,8,4"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>
    
    <!-- Chat Bubble Style - Received -->
    <Style x:Key="ReceivedMessageBubbleStyle" TargetType="Border">
        <Setter Property="Background" Value="#E8E8E8"/>
        <Setter Property="CornerRadius" Value="16,16,16,4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="8,4,48,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <!-- Tooltip Style -->
    <Style x:Key="ModernTooltipStyle" TargetType="ToolTip" BasedOn="{StaticResource MaterialDesignToolTip}">
        <Setter Property="Background" Value="#323232"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
</ResourceDictionary>
