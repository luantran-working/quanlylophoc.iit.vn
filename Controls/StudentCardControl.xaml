<UserControl x:Class="ClassroomManagement.Controls.StudentCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="280">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    
    <Border Style="{StaticResource StudentListCardStyle}" 
            Background="{Binding Background, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=White}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Avatar with Status Indicator -->
            <Grid Grid.Column="0" Margin="0,0,12,0">
                <Border Width="48" Height="48" CornerRadius="24" Background="#E3F2FD">
                    <materialDesign:PackIcon Kind="Account" 
                                              Width="28" Height="28"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Foreground="{StaticResource AppPrimaryBrush}"/>
                </Border>
                <!-- Online Status Indicator -->
                <Ellipse Width="14" Height="14"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Bottom"
                         Stroke="White" StrokeThickness="2"
                         Fill="{Binding IsOnline, Converter={StaticResource BoolToVisConverter}, FallbackValue=#4CAF50}">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="{StaticResource OnlineBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                    <Setter Property="Fill" Value="{StaticResource OfflineBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
            </Grid>
            
            <!-- Student Info -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName, FallbackValue='Há»c sinh'}" 
                           FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryTextBrush}"/>
                <TextBlock FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"
                           Margin="0,2,0,0">
                    <Run Text="{Binding ComputerName, FallbackValue=''}"/>
                    <Run Text=" â€¢ "/>
                    <Run Text="{Binding IpAddress, FallbackValue='IP'}"/>
                </TextBlock>
                <TextBlock FontSize="11" Margin="0,2,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="â— Online"/>
                            <Setter Property="Foreground" Value="#4CAF50"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                    <Setter Property="Text" Value="â—‹ Offline"/>
                                    <Setter Property="Foreground" Value="#9E9E9E"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsLocked}" Value="True">
                                    <Setter Property="Text" Value="ðŸ”’ ÄÃ£ khÃ³a"/>
                                    <Setter Property="Foreground" Value="#F44336"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Camera Toggle -->
                <ToggleButton Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                              Width="32" Height="32"
                              IsChecked="{Binding IsCameraOn}"
                              ToolTip="Báº­t/Táº¯t Camera">
                    <materialDesign:PackIcon Kind="Camera" Width="18" Height="18"/>
                    <materialDesign:ToggleButtonAssist.OnContent>
                        <materialDesign:PackIcon Kind="Camera" Width="18" Height="18" Foreground="{StaticResource AppPrimaryBrush}"/>
                    </materialDesign:ToggleButtonAssist.OnContent>
                </ToggleButton>
                
                <!-- Microphone Toggle -->
                <ToggleButton Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                              Width="32" Height="32"
                              IsChecked="{Binding IsMicrophoneOn}"
                              ToolTip="Báº­t/Táº¯t Microphone">
                    <materialDesign:PackIcon Kind="Microphone" Width="18" Height="18"/>
                    <materialDesign:ToggleButtonAssist.OnContent>
                        <materialDesign:PackIcon Kind="Microphone" Width="18" Height="18" Foreground="{StaticResource AppPrimaryBrush}"/>
                    </materialDesign:ToggleButtonAssist.OnContent>
                </ToggleButton>
                
                <!-- Lock Button -->
                <Button Style="{StaticResource MaterialDesignIconButton}"
                        Width="32" Height="32"
                        Command="{Binding LockCommand}"
                        ToolTip="KhÃ³a mÃ¡y">
                    <materialDesign:PackIcon Kind="Lock" Width="18" Height="18"/>
                </Button>
                
                <!-- Chat Button -->
                <Button Style="{StaticResource MaterialDesignIconButton}"
                        Width="32" Height="32"
                        Command="{Binding ChatCommand}"
                        ToolTip="Chat riÃªng">
                    <materialDesign:PackIcon Kind="MessageText" Width="18" Height="18"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
