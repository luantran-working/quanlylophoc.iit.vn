<UserControl x:Class="ClassroomManagement.Controls.StudentCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="72" d:DesignWidth="300">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Border CornerRadius="8" Background="White" Margin="4,2" Padding="12,8"
            BorderBrush="#F0F0F0" BorderThickness="1">
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Xem màn hình" Click="ViewScreen_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Monitor"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Điều khiển từ xa" Click="RemoteControl_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="RemoteDesktop"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Chat riêng" Click="PrivateChat_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Message"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Gửi file" Click="SendFile_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="FileDocument"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Khóa máy" Click="LockMachine_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Lock"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </Border.ContextMenu>
        <Border.Effect>
            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Direction="270" Opacity="0.05" Color="Black"/>
        </Border.Effect>
        <Border.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.02" Duration="0:0:0.1"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.02" Duration="0:0:0.1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                 <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.1"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Selection Checkbox -->
            <CheckBox Grid.Column="0"
                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                      VerticalAlignment="Center"
                      Margin="0,0,8,0"
                      ToolTip="Chọn học sinh này"/>

            <!-- Avatar -->
            <Grid Grid.Column="1" Margin="0,0,12,0">
                <Border Width="40" Height="40" CornerRadius="20" Background="#E3F2FD">
                    <materialDesign:PackIcon Kind="Account"
                                              Width="24" Height="24"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Foreground="{StaticResource AppPrimaryBrush}"/>
                </Border>
                <!-- Online Status -->
                <Ellipse Width="12" Height="12"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Bottom"
                         Stroke="White" StrokeThickness="2">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="{StaticResource OfflineBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                    <Setter Property="Fill" Value="{StaticResource OnlineBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
            </Grid>

            <!-- Student Info -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName, FallbackValue='Học sinh'}"
                           FontSize="13" FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryTextBrush}"/>
                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                    <TextBlock Text="{Binding IpAddress, FallbackValue='192.168.1.10'}" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                 <Button Style="{StaticResource MaterialDesignToolButton}"
                        Width="28" Height="28" Padding="4"
                        Command="{Binding ToggleCameraCommand}"
                        ToolTip="Camera">
                     <materialDesign:PackIcon Kind="Camera" Width="16" Height="16">
                         <materialDesign:PackIcon.Style>
                             <Style TargetType="materialDesign:PackIcon">
                                 <Setter Property="Foreground" Value="#BDBDBD"/>
                                  <Style.Triggers>
                                     <DataTrigger Binding="{Binding IsCameraOn}" Value="True">
                                         <Setter Property="Foreground" Value="{StaticResource AppPrimaryBrush}"/>
                                     </DataTrigger>
                                 </Style.Triggers>
                             </Style>
                         </materialDesign:PackIcon.Style>
                     </materialDesign:PackIcon>
                </Button>

                 <Button Style="{StaticResource MaterialDesignToolButton}"
                        Width="28" Height="28" Padding="4"
                        Command="{Binding ToggleMicCommand}"
                        ToolTip="Microphone">
                    <materialDesign:PackIcon Kind="Microphone" Width="16" Height="16">
                        <materialDesign:PackIcon.Style>
                             <Style TargetType="materialDesign:PackIcon">
                                 <Setter Property="Foreground" Value="#BDBDBD"/>
                                  <Style.Triggers>
                                     <DataTrigger Binding="{Binding IsMicrophoneOn}" Value="True">
                                         <Setter Property="Foreground" Value="{StaticResource AppPrimaryBrush}"/>
                                     </DataTrigger>
                                 </Style.Triggers>
                             </Style>
                         </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                </Button>

                <Button Style="{StaticResource MaterialDesignToolButton}"
                        Width="28" Height="28" Padding="4"
                        Command="{Binding LockCommand}"
                        ToolTip="Khóa máy">
                     <materialDesign:PackIcon Kind="Lock" Width="16" Height="16" Foreground="#757575"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
