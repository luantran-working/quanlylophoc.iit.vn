<UserControl x:Class="ClassroomManagement.Controls.ScreenThumbnailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="240"
             MouseDoubleClick="OnMouseDoubleClick">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <Border x:Name="MainBorder" 
            Background="White"
            CornerRadius="8" 
            Margin="6"
            Cursor="Hand"
            BorderBrush="#E0E0E0" BorderThickness="1">
        
        <Border.Effect>
            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Direction="270" Opacity="0.1" Color="Black"/>
        </Border.Effect>
        
        <Border.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.03" Duration="0:0:0.1"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.03" Duration="0:0:0.1"/>
                        <ColorAnimation Storyboard.TargetName="MainBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="{StaticResource AppPrimaryColor}" Duration="0:0:0.1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                 <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.1"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.1"/>
                        <ColorAnimation Storyboard.TargetName="MainBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="#E0E0E0" Duration="0:0:0.1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
        
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1" CenterX="120" CenterY="80"/>
        </Border.RenderTransform>
        
        <Grid ClipToBounds="True">
            <Border CornerRadius="7" ClipToBounds="True">
                <Grid>
                    <!-- Background -->
                    <Border x:Name="ScreenBackground" Background="#F5F5F7"/>
                    
                    <!-- Screen Image -->
                    <Image x:Name="ScreenImage" 
                           Stretch="UniformToFill" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           RenderOptions.BitmapScalingMode="Linear"/>
                    
                    <!-- Placeholder when no image -->
                    <StackPanel x:Name="PlaceholderPanel" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="Visible">
                        <Border Background="#EEE" CornerRadius="20" Width="40" Height="40" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="MonitorScreenshot" 
                                                      Width="20" Height="20" 
                                                      Foreground="#9E9E9E"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Chưa có tín hiệu" FontSize="11" 
                                   FontWeight="Medium"
                                   Foreground="#9E9E9E" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Locked Overlay -->
                    <Border x:Name="LockedOverlay" 
                            Background="#D9000000" 
                            Visibility="Collapsed">
                         <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Lock" Width="28" Height="28" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="ĐÃ KHÓA" FontSize="11" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" LetterSpacing="1"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Bottom Info Bar -->
                    <Border VerticalAlignment="Bottom" 
                            Background="#F0FFFFFF" 
                            Padding="8,6"
                            BorderBrush="#EEEEEE" BorderThickness="0,1,0,0">
                         <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#F0FFFFFF" Offset="0"/>
                                <GradientStop Color="#FFFFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="StudentNameText" 
                                           Text="{Binding DisplayName, FallbackValue='Nguyễn Văn A'}" 
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="#333"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="StudentInfoText" 
                                               FontSize="10" Foreground="#757575" Margin="0,1,0,0">
                                        <Run Text="{Binding IpAddress, FallbackValue='192.168.1.10'}"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Quick Actions (Only show on hover or cleaner icons) -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                 <Button x:Name="LockButton"
                                        Style="{StaticResource MaterialDesignToolButton}"
                                        Width="24" Height="24" Padding="2"
                                        ToolTip="Khóa/Mở khóa"
                                        Click="LockButton_Click">
                                    <materialDesign:PackIcon Kind="LockOutline" Width="14" Height="14" Foreground="#757575"/>
                                </Button>
                                
                                <Button Style="{StaticResource MaterialDesignToolButton}"
                                        Width="24" Height="24" Padding="2"
                                        ToolTip="Xem toàn màn hình"
                                        Click="FullscreenButton_Click">
                                    <materialDesign:PackIcon Kind="Fullscreen" Width="14" Height="14" Foreground="#757575"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Online Indicator -->
                    <Border Width="10" Height="10" CornerRadius="5"
                             HorizontalAlignment="Right" 
                             VerticalAlignment="Top"
                             Margin="0,8,8,0"
                             BorderBrush="White" BorderThickness="1.5">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
