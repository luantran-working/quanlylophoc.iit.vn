<UserControl x:Class="ClassroomManagement.Controls.ScreenThumbnailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200"
             MouseDoubleClick="OnMouseDoubleClick">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <Border x:Name="MainBorder" 
            Style="{StaticResource ScreenThumbnailStyle}" 
            Height="140" Margin="4"
            Cursor="Hand">
        <Grid>
            <!-- Background -->
            <Border x:Name="ScreenBackground" Background="#1a1a2e" CornerRadius="4"/>
            
            <!-- Screen Image -->
            <Image x:Name="ScreenImage" 
                   Stretch="UniformToFill" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   RenderOptions.BitmapScalingMode="LowQuality"/>
            
            <!-- Placeholder when no image -->
            <StackPanel x:Name="PlaceholderPanel" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Visibility="Visible">
                <materialDesign:PackIcon Kind="MonitorScreenshot" 
                                          Width="40" Height="40" 
                                          Foreground="#555"
                                          HorizontalAlignment="Center"/>
                <TextBlock Text="Đang tải..." FontSize="10" 
                           Foreground="#666" Margin="0,4,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Locked Overlay -->
            <Border x:Name="LockedOverlay" 
                    Background="#AA000000" CornerRadius="4"
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Lock" Width="32" Height="32" Foreground="#F44336"/>
                    <TextBlock Text="ĐÃ KHÓA" FontSize="12" Foreground="#F44336" 
                               FontWeight="Bold" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Bottom Info Bar -->
            <Border VerticalAlignment="Bottom" 
                    Background="#99000000" 
                    CornerRadius="0,0,4,4"
                    Padding="8,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="StudentNameText" 
                                   Text="{Binding DisplayName, FallbackValue='Học sinh'}" 
                                   FontSize="12" FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock x:Name="StudentInfoText" 
                                   FontSize="10" Foreground="#AAA" Margin="0,2,0,0">
                            <Run Text="{Binding IpAddress, FallbackValue='---.---.---.---'}"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Quick Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Lock/Unlock -->
                        <Button x:Name="LockButton"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Width="28" Height="28"
                                ToolTip="Khóa/Mở khóa màn hình"
                                Click="LockButton_Click">
                            <materialDesign:PackIcon Kind="Lock" Width="16" Height="16" Foreground="White"/>
                        </Button>
                        
                        <!-- Chat -->
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Width="28" Height="28"
                                ToolTip="Chat riêng"
                                Click="ChatButton_Click">
                            <materialDesign:PackIcon Kind="Message" Width="16" Height="16" Foreground="White"/>
                        </Button>
                        
                        <!-- Fullscreen -->
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Width="28" Height="28"
                                ToolTip="Xem toàn màn hình"
                                Click="FullscreenButton_Click">
                            <materialDesign:PackIcon Kind="Fullscreen" Width="16" Height="16" Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Online Indicator -->
            <Ellipse Width="10" Height="10" 
                     HorizontalAlignment="Right" 
                     VerticalAlignment="Top"
                     Margin="0,8,8,0"
                     Stroke="White" StrokeThickness="1.5">
                <Ellipse.Style>
                    <Style TargetType="Ellipse">
                        <Setter Property="Fill" Value="#4CAF50"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                <Setter Property="Fill" Value="#9E9E9E"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>
        </Grid>
    </Border>
</UserControl>
