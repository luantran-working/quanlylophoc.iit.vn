<UserControl x:Class="ClassroomManagement.Controls.ToolButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="56" d:DesignWidth="200"
             x:Name="ToolButtonControl">
    
    <Button Style="{StaticResource SidebarToolButtonStyle}"
            Command="{Binding Command, ElementName=ToolButtonControl}"
            CommandParameter="{Binding CommandParameter, ElementName=ToolButtonControl}"
            ToolTip="{Binding ToolTipText, ElementName=ToolButtonControl}"
            Click="OnButtonClick">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Icon -->
            <Border Width="36" Height="36" 
                    CornerRadius="8" 
                    Background="{Binding IconBackground, ElementName=ToolButtonControl, FallbackValue=#3D3D4D}"
                    Margin="0,0,12,0">
                <materialDesign:PackIcon Kind="{Binding IconKind, ElementName=ToolButtonControl, FallbackValue=Help}"
                                          Width="20" Height="20"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Foreground="{Binding IconForeground, ElementName=ToolButtonControl, FallbackValue=White}"/>
            </Border>
            
            <!-- Text -->
            <TextBlock Grid.Column="1" 
                       Text="{Binding ButtonText, ElementName=ToolButtonControl, FallbackValue='Tool Button'}"
                       FontSize="13" FontWeight="Medium"
                       VerticalAlignment="Center"/>
        </Grid>
    </Button>
</UserControl>
