<Window x:Class="ClassroomManagement.Views.FileNotificationPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Nhận File" Height="200" Width="400"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
             <materialDesign:PackIcon Kind="CloudDownload" Width="24" Height="24" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
             <TextBlock Text="CÓ FILE MỚI TỪ GIÁO VIÊN" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,16">
            <TextBlock x:Name="FileNameText" Text="Tai_lieu.docx" Style="{StaticResource MaterialDesignHeadline6TextBlock}" TextTrimming="CharacterEllipsis"/>
            <TextBlock x:Name="FileSizeText" Text="2.5 MB" Foreground="#757575"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="TỪ CHỐI" Click="Decline_Click" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Gray"/>
            <Button Content="NHẬN FILE" Click="Accept_Click" Style="{StaticResource MaterialDesignRaisedButton}" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
