<Window x:Class="ClassroomManagement.Views.StudentScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Màn hình học sinh" 
        Width="1024" Height="768"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e"
        KeyDown="Window_KeyDown">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d44" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Monitor" Width="24" Height="24" 
                                              Foreground="White" VerticalAlignment="Center"/>
                    <StackPanel Margin="12,0,0,0">
                        <TextBlock x:Name="StudentNameText" Text="Học sinh" 
                                   FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="StudentInfoText" Text="IP: ---.---.---.---" 
                                   FontSize="12" Foreground="#AAA"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Lock Button -->
                    <Button x:Name="LockButton" 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="White" BorderBrush="#555"
                            Margin="0,0,8,0"
                            Click="LockButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Lock" Width="18" Height="18"/>
                            <TextBlock x:Name="LockButtonText" Text="Khóa máy" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Remote Control Button -->
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="White" BorderBrush="#555"
                            Margin="0,0,8,0"
                            Click="RemoteControlButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="RemoteDesktop" Width="18" Height="18"/>
                            <TextBlock Text="Điều khiển" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Screen Display -->
        <Grid Grid.Row="1">
            <Image x:Name="ScreenImage" 
                   Stretch="Uniform" 
                   RenderOptions.BitmapScalingMode="HighQuality"/>
            
            <!-- Loading placeholder -->
            <StackPanel x:Name="LoadingPanel" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True" Width="48" Height="48"
                             Foreground="White"/>
                <TextBlock Text="Đang tải màn hình..." 
                           Foreground="#888" FontSize="14" 
                           Margin="0,16,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Locked Overlay -->
            <Border x:Name="LockedOverlay" Background="#CC000000" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Lock" Width="64" Height="64" Foreground="#F44336"/>
                    <TextBlock Text="MÀN HÌNH ĐÃ BỊ KHÓA" FontSize="24" 
                               Foreground="#F44336" FontWeight="Bold" Margin="0,16,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer Status Bar -->
        <Border Grid.Row="2" Background="#2d2d44" Padding="16,8">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="#4CAF50" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" Text="Đang xem trực tiếp" 
                               Foreground="#AAA" FontSize="12" Margin="8,0,0,0"/>
                </StackPanel>
                
                <TextBlock x:Name="UpdateTimeText" Text="Cập nhật: --:--:--" 
                           Foreground="#666" FontSize="11" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
