<Window x:Class="ClassroomManagement.Views.WhiteboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Bảng Trắng"
        Height="700" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Border CornerRadius="8" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="Black" Opacity="0.15"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <Border Grid.Row="0" Background="{StaticResource AppPrimaryBrush}" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="16,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="DrawPen" Width="24" Height="24"
                                                  Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Bảng Trắng" FontSize="16" FontWeight="Bold"
                                   Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock x:Name="ParticipantCountText" Grid.Column="1"
                               Text="• 0 người tham gia"
                               FontSize="12"
                               Foreground="White"
                               Opacity="0.8"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Foreground="White" Width="30" Height="30"
                                ToolTip="Thu nhỏ" Click="MinimizeButton_Click">
                            <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Foreground="White" Width="30" Height="30"
                                ToolTip="Phóng to" Click="MaximizeButton_Click">
                            <materialDesign:PackIcon Kind="WindowMaximize" Width="16" Height="16"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Foreground="White" Width="30" Height="30"
                                ToolTip="Đóng" Click="CloseButton_Click">
                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Toolbar -->
            <Border Grid.Row="1" Background="White" Padding="12,8" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Drawing Tools -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <!-- Select -->
                        <RadioButton x:Name="SelectTool" GroupName="DrawingTool"
                                     Style="{StaticResource MaterialDesignToolRadioButton}"
                                     ToolTip="Chọn / Di chuyển" Margin="4,0" Click="Tool_Click" Tag="Select">
                            <materialDesign:PackIcon Kind="CursorMove" Width="20" Height="20"/>
                        </RadioButton>

                        <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="8,0"/>

                        <!-- Pen -->
                        <RadioButton x:Name="PenTool" GroupName="DrawingTool" IsChecked="True"
                                     Style="{StaticResource MaterialDesignToolRadioButton}"
                                     ToolTip="Bút vẽ" Margin="4,0" Click="Tool_Click" Tag="Pen">
                            <materialDesign:PackIcon Kind="Pen" Width="20" Height="20"/>
                        </RadioButton>

                        <!-- Highlighter -->
                        <RadioButton x:Name="HighlighterTool" GroupName="DrawingTool"
                                     Style="{StaticResource MaterialDesignToolRadioButton}"
                                     ToolTip="Bút dạ quang" Margin="4,0" Click="Tool_Click" Tag="Highlighter">
                            <materialDesign:PackIcon Kind="Marker" Width="20" Height="20"/>
                        </RadioButton>

                        <!-- Eraser -->
                        <RadioButton x:Name="EraserTool" GroupName="DrawingTool"
                                     Style="{StaticResource MaterialDesignToolRadioButton}"
                                     ToolTip="Tẩy" Margin="4,0" Click="Tool_Click" Tag="Eraser">
                            <materialDesign:PackIcon Kind="Eraser" Width="20" Height="20"/>
                        </RadioButton>

                        <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="8,0"/>

                        <!-- Shapes -->
                        <RadioButton x:Name="LineTool" GroupName="DrawingTool"
                                     Style="{StaticResource MaterialDesignToolRadioButton}"
                                     ToolTip="Đường thẳng" Margin="4,0" Click="Tool_Click" Tag="Line">
                            <materialDesign:PackIcon Kind="VectorLine" Width="20" Height="20"/>
                        </RadioButton>

                        <RadioButton x:Name="RectangleTool" GroupName="DrawingTool"
                                     Style="{StaticResource MaterialDesignToolRadioButton}"
                                     ToolTip="Hình chữ nhật" Margin="4,0" Click="Tool_Click" Tag="Rectangle">
                            <materialDesign:PackIcon Kind="RectangleOutline" Width="20" Height="20"/>
                        </RadioButton>

                        <RadioButton x:Name="CircleTool" GroupName="DrawingTool"
                                     Style="{StaticResource MaterialDesignToolRadioButton}"
                                     ToolTip="Hình tròn" Margin="4,0" Click="Tool_Click" Tag="Circle">
                            <materialDesign:PackIcon Kind="CircleOutline" Width="20" Height="20"/>
                        </RadioButton>

                        <RadioButton x:Name="ArrowTool" GroupName="DrawingTool"
                                     Style="{StaticResource MaterialDesignToolRadioButton}"
                                     ToolTip="Mũi tên" Margin="4,0" Click="Tool_Click" Tag="Arrow">
                            <materialDesign:PackIcon Kind="ArrowRight" Width="20" Height="20"/>
                        </RadioButton>

                        <RadioButton x:Name="TextTool" GroupName="DrawingTool"
                                     Style="{StaticResource MaterialDesignToolRadioButton}"
                                     ToolTip="Văn bản" Margin="4,0" Click="Tool_Click" Tag="Text">
                            <materialDesign:PackIcon Kind="FormatText" Width="20" Height="20"/>
                        </RadioButton>
                    </StackPanel>

                    <!-- Color & Thickness -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0">
                        <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="0,0,8,0"/>

                        <!-- Quick Color Palette -->
                        <StackPanel Orientation="Horizontal" Margin="4,0">
                            <Border Width="24" Height="24" CornerRadius="12" Background="#000000" Margin="2"
                                    Cursor="Hand" MouseDown="QuickColor_Click" Tag="#000000" ToolTip="Đen"/>
                            <Border Width="24" Height="24" CornerRadius="12" Background="#F44336" Margin="2"
                                    Cursor="Hand" MouseDown="QuickColor_Click" Tag="#F44336" ToolTip="Đỏ"/>
                            <Border Width="24" Height="24" CornerRadius="12" Background="#2196F3" Margin="2"
                                    Cursor="Hand" MouseDown="QuickColor_Click" Tag="#2196F3" ToolTip="Xanh"/>
                            <Border Width="24" Height="24" CornerRadius="12" Background="#4CAF50" Margin="2"
                                    Cursor="Hand" MouseDown="QuickColor_Click" Tag="#4CAF50" ToolTip="Lá"/>
                            <Border Width="24" Height="24" CornerRadius="12" Background="#FF9800" Margin="2"
                                    Cursor="Hand" MouseDown="QuickColor_Click" Tag="#FF9800" ToolTip="Cam"/>
                            <Border Width="24" Height="24" CornerRadius="12" Background="#9C27B0" Margin="2"
                                    Cursor="Hand" MouseDown="QuickColor_Click" Tag="#9C27B0" ToolTip="Tím"/>
                        </StackPanel>

                        <!-- More Colors Button -->
                        <Button x:Name="ColorButton" Width="32" Height="32"
                                Background="Black"
                                BorderThickness="2" BorderBrush="#CCC"
                                Click="ColorButton_Click"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                ToolTip="Chọn màu khác" Margin="8,0,0,0"/>

                        <!-- Thickness Slider -->
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                            <TextBlock Text="Độ dày:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#666"/>
                            <Slider x:Name="ThicknessSlider" Width="100" Minimum="1" Maximum="20" Value="2"
                                    TickFrequency="1" VerticalAlignment="Center"
                                    ValueChanged="ThicknessSlider_ValueChanged"/>
                            <TextBlock Text="{Binding ElementName=ThicknessSlider, Path=Value, StringFormat='{}{0:F0}px'}"
                                       VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666" Width="35"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="32" Padding="12,0"
                                Click="Undo_Click"
                                ToolTip="Hoàn tác (Ctrl+Z)" Margin="4,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Undo" Width="18" Height="18" VerticalAlignment="Center"/>
                                <TextBlock Text="Hoàn tác" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="32" Padding="12,0"
                                Click="Redo_Click"
                                ToolTip="Làm lại (Ctrl+Y)" Margin="4,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Redo" Width="18" Height="18" VerticalAlignment="Center"/>
                                <TextBlock Text="Làm lại" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="32" Padding="12,0"
                                Click="Clear_Click"
                                ToolTip="Xóa tất cả" Margin="4,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DeleteOutline" Width="18" Height="18" VerticalAlignment="Center"/>
                                <TextBlock Text="Xóa tất cả" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{StaticResource AppPrimaryBrush}"
                                Height="32" Padding="12,0"
                                Click="Save_Click"
                                ToolTip="Lưu ảnh" Margin="4,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18" VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock Text="Lưu ảnh" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Canvas -->
            <Border Grid.Row="2" Background="White" Margin="8">
                <InkCanvas x:Name="WhiteboardCanvas"
                           Background="White"
                           MouseDown="Canvas_MouseDown"
                           MouseMove="Canvas_MouseMove"
                           MouseUp="Canvas_MouseUp"
                           DefaultDrawingAttributes="{Binding CurrentDrawingAttributes}"
                           EditingMode="Ink"/>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="3" Background="#F5F5F5" Padding="12,8" CornerRadius="0,0,8,8" BorderBrush="#EEE" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="StatusText" Text="Sẵn sàng"
                               FontSize="12" Foreground="#666" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                        <Button Style="{StaticResource MaterialDesignToolButton}" Width="28" Height="28"
                                Click="ZoomOut_Click" ToolTip="Thu nhỏ">
                            <materialDesign:PackIcon Kind="MagnifyMinus" Width="16" Height="16"/>
                        </Button>
                        <TextBlock x:Name="ZoomText" Text="100%" FontSize="11" Foreground="#666"
                                   VerticalAlignment="Center" Margin="8,0" Width="40" TextAlignment="Center"/>
                        <Button Style="{StaticResource MaterialDesignToolButton}" Width="28" Height="28"
                                Click="ZoomIn_Click" ToolTip="Phóng to">
                            <materialDesign:PackIcon Kind="MagnifyPlus" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>

                    <TextBlock x:Name="CoordinatesText" Grid.Column="2" Text=""
                               FontSize="11" Foreground="#999"
                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
