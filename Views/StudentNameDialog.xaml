<Window x:Class="ClassroomManagement.Views.StudentNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thông tin học sinh" 
        Height="320" Width="380"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Border CornerRadius="16" Background="White"
            BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource AppPrimaryBrush}" 
                    CornerRadius="16,16,0,0" Padding="24,16"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountCircle" 
                                                  Width="28" Height="28"
                                                  Foreground="White"
                                                  VerticalAlignment="Center"/>
                        <TextBlock Text="Thông tin Học sinh" 
                                   FontSize="18" FontWeight="Bold"
                                   Foreground="White" Margin="12,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            Foreground="White" Opacity="0.8"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Form -->
            <StackPanel Grid.Row="1" Margin="28,20">
                <TextBlock Text="Họ và tên" FontWeight="Medium" 
                           Foreground="#424242" Margin="0,0,0,8"/>
                <TextBox x:Name="NameTextBox"
                         materialDesign:HintAssist.Hint="Nhập họ tên của bạn"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="14" Padding="12,10"
                         materialDesign:TextFieldAssist.HasLeadingIcon="True"
                         materialDesign:TextFieldAssist.LeadingIcon="Account"
                         KeyDown="NameTextBox_KeyDown"/>
                
                <TextBlock x:Name="ErrorText" 
                           Foreground="#F44336" FontSize="12"
                           Margin="0,8,0,0" Visibility="Collapsed"/>
                
                <Button Content="Tiếp tục" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{StaticResource AppPrimaryBrush}"
                        Foreground="White"
                        FontWeight="Bold" FontSize="14"
                        Height="44" Margin="0,20,0,0"
                        Click="ContinueButton_Click"/>
                
                <TextBlock Text="Nhập tên để giáo viên nhận diện bạn trong lớp học." 
                           Foreground="#757575" FontSize="12"
                           TextWrapping="Wrap" Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
