<Window x:Class="ClassroomManagement.Views.SubmitAssignmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nộp Bài Tập" Height="400" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Chọn file nộp bài" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- File List -->
        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Margin="0,0,0,10">
            <ListView x:Name="FileList" AllowDrop="True" Drop="FileList_Drop">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Tên File" Width="380" DisplayMemberBinding="{Binding FileName}"/>
                        <GridViewColumn Header="Kích thước" Width="100" DisplayMemberBinding="{Binding FileSizeStr}"/>
                        <GridViewColumn Header="" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Xóa" Click="RemoveFile_Click" Tag="{Binding}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Note -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Ghi chú:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="NoteInput" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Padding="5"/>
        </StackPanel>

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Thêm File..." Width="100" Height="30" Margin="0,0,10,0" Click="AddFile_Click"/>
            <Button Content="Hủy" Width="80" Height="30" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Nộp Bài" Width="100" Height="30" Click="Submit_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
