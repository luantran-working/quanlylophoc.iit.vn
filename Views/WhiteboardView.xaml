<UserControl x:Class="ClassroomManagement.Views.WhiteboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Border CornerRadius="8" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <Border Grid.Row="0" Background="White" Padding="8" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <!-- Drawing Tools Group -->
                        <Border BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="4" Padding="2" Margin="0,0,4,0">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="SelectTool" GroupName="DrawingTool"
                                             Style="{StaticResource MaterialDesignToolRadioButton}"
                                             ToolTip="Chọn / Di chuyển" Click="Tool_Click" Tag="Select">
                                    <materialDesign:PackIcon Kind="CursorMove" Width="18" Height="18"/>
                                </RadioButton>
                                <RadioButton x:Name="PenTool" GroupName="DrawingTool" IsChecked="True"
                                             Style="{StaticResource MaterialDesignToolRadioButton}"
                                             ToolTip="Bút vẽ" Click="Tool_Click" Tag="Pen">
                                    <materialDesign:PackIcon Kind="Pen" Width="18" Height="18"/>
                                </RadioButton>
                                <RadioButton x:Name="HighlighterTool" GroupName="DrawingTool"
                                             Style="{StaticResource MaterialDesignToolRadioButton}"
                                             ToolTip="Bút dạ quang" Click="Tool_Click" Tag="Highlighter">
                                    <materialDesign:PackIcon Kind="Marker" Width="18" Height="18"/>
                                </RadioButton>
                                <RadioButton x:Name="EraserTool" GroupName="DrawingTool"
                                             Style="{StaticResource MaterialDesignToolRadioButton}"
                                             ToolTip="Tẩy" Click="Tool_Click" Tag="Eraser">
                                    <materialDesign:PackIcon Kind="Eraser" Width="18" Height="18"/>
                                </RadioButton>
                            </StackPanel>
                        </Border>

                        <!-- Shapes Group -->
                        <Border BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="4" Padding="2" Margin="0,0,4,0">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="LineTool" GroupName="DrawingTool"
                                             Style="{StaticResource MaterialDesignToolRadioButton}"
                                             ToolTip="Đường thẳng" Click="Tool_Click" Tag="Line">
                                    <materialDesign:PackIcon Kind="VectorLine" Width="18" Height="18"/>
                                </RadioButton>
                                <RadioButton x:Name="ArrowTool" GroupName="DrawingTool"
                                             Style="{StaticResource MaterialDesignToolRadioButton}"
                                             ToolTip="Mũi tên" Click="Tool_Click" Tag="Arrow">
                                    <materialDesign:PackIcon Kind="ArrowRight" Width="18" Height="18"/>
                                </RadioButton>
                                <RadioButton x:Name="RectangleTool" GroupName="DrawingTool"
                                             Style="{StaticResource MaterialDesignToolRadioButton}"
                                             ToolTip="Hình chữ nhật" Click="Tool_Click" Tag="Rectangle">
                                    <materialDesign:PackIcon Kind="RectangleOutline" Width="18" Height="18"/>
                                </RadioButton>
                                <RadioButton x:Name="CircleTool" GroupName="DrawingTool"
                                             Style="{StaticResource MaterialDesignToolRadioButton}"
                                             ToolTip="Hình tròn" Click="Tool_Click" Tag="Circle">
                                    <materialDesign:PackIcon Kind="CircleOutline" Width="18" Height="18"/>
                                </RadioButton>
                                <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="2,0"/>
                                <RadioButton x:Name="TextTool" GroupName="DrawingTool"
                                             Style="{StaticResource MaterialDesignToolRadioButton}"
                                             ToolTip="Văn bản" Click="Tool_Click" Tag="Text">
                                    <materialDesign:PackIcon Kind="FormatText" Width="18" Height="18"/>
                                </RadioButton>
                            </StackPanel>
                        </Border>

                        <!-- Style Group -->
                        <Border BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="4" Padding="2" Margin="0,0,4,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Colors -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,4,0">
                                    <Border Width="16" Height="16" CornerRadius="8" Background="#000000" Margin="1" Cursor="Hand" MouseDown="QuickColor_Click" Tag="#000000" ToolTip="Đen"/>
                                    <Border Width="16" Height="16" CornerRadius="8" Background="#F44336" Margin="1" Cursor="Hand" MouseDown="QuickColor_Click" Tag="#F44336" ToolTip="Đỏ"/>
                                    <Border Width="16" Height="16" CornerRadius="8" Background="#2196F3" Margin="1" Cursor="Hand" MouseDown="QuickColor_Click" Tag="#2196F3" ToolTip="Xanh"/>
                                    <Border Width="16" Height="16" CornerRadius="8" Background="#4CAF50" Margin="1" Cursor="Hand" MouseDown="QuickColor_Click" Tag="#4CAF50" ToolTip="Lá"/>
									<Border Width="16" Height="16" CornerRadius="8" Background="#FFFF00" Margin="1" Cursor="Hand" MouseDown="QuickColor_Click" Tag="#FFFF00" ToolTip="Vàng"/>
                                </StackPanel>
                                <Button x:Name="ColorButton" Width="20" Height="20"
                                        Background="Black" BorderThickness="1" BorderBrush="#CCC"
                                        Click="ColorButton_Click" materialDesign:ButtonAssist.CornerRadius="4"
                                        ToolTip="Chọn màu khác" Margin="0,0,4,0"/>

                                <!-- Thickness -->
                                <Slider x:Name="ThicknessSlider" Width="60" Minimum="1" Maximum="20" Value="2"
                                        TickFrequency="1" VerticalAlignment="Center"
                                        ValueChanged="ThicknessSlider_ValueChanged" ToolTip="Độ dày"/>
                            </StackPanel>
                        </Border>

                        <!-- Actions Group -->
                        <Border BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="4" Padding="2">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource MaterialDesignToolButton}" Width="26" Height="26" Click="Undo_Click" ToolTip="Hoàn tác">
                                    <materialDesign:PackIcon Kind="Undo" Width="18" Height="18"/>
                                </Button>
                                <Button Style="{StaticResource MaterialDesignToolButton}" Width="26" Height="26" Click="Redo_Click" ToolTip="Làm lại">
                                    <materialDesign:PackIcon Kind="Redo" Width="18" Height="18"/>
                                </Button>
                                <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="2,0"/>
                                <Button Style="{StaticResource MaterialDesignToolButton}" Width="26" Height="26" Click="Clear_Click" ToolTip="Xóa tất cả">
                                    <materialDesign:PackIcon Kind="DeleteOutline" Width="18" Height="18"/>
                                </Button>
                                <Button Style="{StaticResource MaterialDesignToolButton}" Width="26" Height="26" Click="Save_Click" ToolTip="Lưu ảnh">
                                    <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18"/>
                                </Button>
                                <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="2,0"/>
                                <Button Style="{StaticResource MaterialDesignIconButton}" Width="26" Height="26" Click="FullScreen_Click" ToolTip="Chế độ cửa sổ riêng" Background="{StaticResource AppPrimaryBrush}" Foreground="White">
                                    <materialDesign:PackIcon Kind="FullScreen" Width="18" Height="18"/>
                                </Button>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Canvas -->
            <Border Grid.Row="1" Background="White" Margin="8">
                <InkCanvas x:Name="WhiteboardCanvas"
                           Background="White"
                           MouseDown="Canvas_MouseDown"
                           MouseMove="Canvas_MouseMove"
                           MouseUp="Canvas_MouseUp"
                           DefaultDrawingAttributes="{Binding CurrentDrawingAttributes}"
                           EditingMode="Ink"/>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#F5F5F5" Padding="12,8" CornerRadius="0,0,8,8" BorderBrush="#EEE" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="StatusText" Text="Sẵn sàng"
                               FontSize="12" Foreground="#666" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                        <!-- Navigation -->
                        <TextBlock x:Name="PageText" Text="Trang: 1/1" FontSize="12" Foreground="#444" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Button Style="{StaticResource MaterialDesignToolButton}" Width="24" Height="24" Click="PrevPage_Click" ToolTip="Trang trước" Margin="0,0,4,0">
                            <materialDesign:PackIcon Kind="ChevronLeft" Width="16" Height="16"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignToolButton}" Width="24" Height="24" Click="NextPage_Click" ToolTip="Trang sau" Margin="0,0,16,0">
                            <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16"/>
                        </Button>

                        <Border Width="1" Height="16" Background="#DDD" Margin="8,0"/>

                        <!-- Zoom -->
                        <Button Style="{StaticResource MaterialDesignToolButton}" Width="24" Height="24"
                                Click="ZoomOut_Click" ToolTip="Thu nhỏ">
                            <materialDesign:PackIcon Kind="MagnifyMinus" Width="16" Height="16"/>
                        </Button>
                        <TextBlock x:Name="ZoomText" Text="100%" FontSize="11" Foreground="#666"
                                   VerticalAlignment="Center" Margin="8,0" Width="35" TextAlignment="Center"/>
                        <Button Style="{StaticResource MaterialDesignToolButton}" Width="24" Height="24"
                                Click="ZoomIn_Click" ToolTip="Phóng to">
                            <materialDesign:PackIcon Kind="MagnifyPlus" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>

                    <TextBlock x:Name="CoordinatesText" Grid.Column="2" Text=""
                               FontSize="11" Foreground="#999"
                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
