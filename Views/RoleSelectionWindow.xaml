<Window x:Class="ClassroomManagement.Views.RoleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Phần mềm quản lý phòng học" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanMinimize">
    
    <!-- Main Container with rounded corners -->
    <Border CornerRadius="8" ClipToBounds="True" Background="#F5F5F7">
        <Grid>
            <!-- Window Controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Panel.ZIndex="1">
                <Button Style="{StaticResource MaterialDesignIconButton}" 
                        Foreground="#757575"
                        Click="MinimizeButton_Click" ToolTip="Thu nhỏ">
                    <materialDesign:PackIcon Kind="WindowMinimize" Width="20" Height="20"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignIconButton}" 
                        Foreground="#757575"
                        Click="CloseButton_Click" ToolTip="Đóng">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>
            </StackPanel>
            
            <!-- Main Content -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                
                <!-- Header -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">
                    <!-- Logo Icon -->
                    <materialDesign:PackIcon Kind="School" 
                                              Width="64" Height="64"
                                              HorizontalAlignment="Center"
                                              Foreground="{StaticResource AppPrimaryBrush}"
                                              Margin="0,0,0,16"/>
                    
                    <!-- Title -->
                    <TextBlock Text="Quản lý phòng học thông minh IIT"
                               FontSize="24" FontWeight="Bold"
                               Foreground="{StaticResource AppPrimaryBrush}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                    
                    <!-- Subtitle -->
                    <TextBlock Text="Vui lòng chọn vai trò của bạn để tiếp tục"
                               FontSize="14" 
                               Foreground="#757575"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
                
                <!-- Role Selection Cards -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    
                    <!-- Teacher Card -->
                    <materialDesign:Card Style="{StaticResource RoleCardStyle}" 
                                          Margin="16,0"
                                          x:Name="TeacherCard"
                                          Cursor="Hand">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Icon Container -->
                            <Border Grid.Row="0" 
                                    Width="80" Height="80" 
                                    CornerRadius="40"
                                    Background="#E3F2FD"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,16">
                                <materialDesign:PackIcon Kind="AccountTie" 
                                                          Width="40" Height="40"
                                                          Foreground="{StaticResource AppPrimaryBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Text Content -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Giáo viên"
                                           FontSize="20" FontWeight="Bold"
                                           Foreground="{StaticResource AppPrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Quản lý lớp học, trình chiếu,&#x0a;điều khiển và giám sát học sinh"
                                           FontSize="13"
                                           Foreground="#757575"
                                           TextAlignment="Center"
                                           LineHeight="20"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                            
                            <!-- Action Button -->
                            <Button Grid.Row="2" 
                                    Style="{StaticResource TeacherButtonStyle}"
                                    Content="Đăng nhập giáo viên"
                                    Click="TeacherLogin_Click"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,16,0,0"/>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- Student Card -->
                    <materialDesign:Card Style="{StaticResource RoleCardStyle}" 
                                          Margin="16,0"
                                          x:Name="StudentCard"
                                          Cursor="Hand">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Icon Container -->
                            <Border Grid.Row="0" 
                                    Width="80" Height="80" 
                                    CornerRadius="40"
                                    Background="#E3F2FD"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,16">
                                <materialDesign:PackIcon Kind="AccountGroup" 
                                                          Width="40" Height="40"
                                                          Foreground="{StaticResource AppPrimaryBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Text Content -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Học sinh"
                                           FontSize="20" FontWeight="Bold"
                                           Foreground="{StaticResource AppPrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Tham gia lớp học, xem bài giảng,&#x0a;tương tác với giáo viên và bạn bè"
                                           FontSize="13"
                                           Foreground="#757575"
                                           TextAlignment="Center"
                                           LineHeight="20"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                            
                            <!-- Action Button -->
                            <Button Grid.Row="2" 
                                    Style="{StaticResource StudentButtonStyle}"
                                    Content="Tham gia lớp học"
                                    Click="StudentJoin_Click"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,16,0,0"/>
                        </Grid>
                    </materialDesign:Card>
                    
                </StackPanel>
                
                <!-- Footer Info -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,32,0,0">
                    <TextBlock Text="Phiên bản 1.0.0 | © 2026 Hệ thống Quản lý Lớp học"
                               FontSize="12"
                               Foreground="#9E9E9E"/>
                </StackPanel>
                
            </StackPanel>
        </Grid>
    </Border>
</Window>
