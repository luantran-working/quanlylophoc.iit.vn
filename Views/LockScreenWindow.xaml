<Window x:Class="ClassroomManagement.Views.LockScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Màn hình đã bị khóa"
        WindowStyle="None"
        WindowState="Maximized"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        Background="#1a1a2e"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewMouseDown="Window_PreviewMouseDown">
    
    <Grid>
        <!-- Background Pattern -->
        <Border Background="#1a1a2e">
            <Border.Effect>
                <DropShadowEffect BlurRadius="100" Opacity="0.3" Color="#000"/>
            </Border.Effect>
        </Border>
        
        <!-- Animated Background -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1a1a2e" Offset="0"/>
                    <GradientStop Color="#16213e" Offset="0.5"/>
                    <GradientStop Color="#0f3460" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <!-- Content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Lock Icon with Animation -->
            <Border Width="120" Height="120" CornerRadius="60" 
                    Background="#e94560" Margin="0,0,0,40">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="40" Opacity="0.5" Color="#e94560" ShadowDepth="0"/>
                </Border.Effect>
                <materialDesign:PackIcon Kind="Lock" 
                                          Width="60" Height="60" 
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
            </Border>
            
            <!-- Main Message -->
            <TextBlock Text="MÀN HÌNH ĐÃ BỊ KHÓA" 
                       FontSize="48" FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.5" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <!-- Sub Message -->
            <TextBlock Text="Giáo viên đã tạm khóa máy tính của bạn" 
                       FontSize="20" 
                       Foreground="#AAAAAA"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>
            
            <!-- Teacher Info -->
            <Border Background="#FFFFFF10" CornerRadius="8" 
                    Padding="24,16" Margin="0,40,0,0"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Teacher" Width="24" Height="24" 
                                              Foreground="#AAAAAA" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TeacherInfoText" 
                               Text="Vui lòng chờ giáo viên mở khóa" 
                               FontSize="16" Foreground="#CCCCCC"
                               Margin="12,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Time -->
            <TextBlock x:Name="LockTimeText" 
                       Text="Đã khóa lúc: --:--:--" 
                       FontSize="14" Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="0,24,0,0"/>
        </StackPanel>
        
        <!-- Bottom Branding -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,40">
            <TextBlock Text="Quản lý Lớp học - IIT" 
                       FontSize="12" Foreground="#444444"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
