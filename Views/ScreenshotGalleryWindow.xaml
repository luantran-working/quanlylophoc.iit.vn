<Window x:Class="ClassroomManagement.Views.ScreenshotGalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Thư viện ảnh chụp màn hình" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA">
    <Window.Resources>
        <Style x:Key="ScreenshotItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="180"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AppPrimaryBrush}"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header / Filter -->
        <Border Grid.Row="0" Background="White" Padding="16" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <ComboBox x:Name="StudentFilterParams"
                              materialDesign:HintAssist.Hint="Tất cả học sinh"
                              DisplayMemberPath="DisplayName"
                              SelectedValuePath="MachineId"
                              Width="200" Margin="0,0,16,0"
                              SelectionChanged="Filter_Changed"/>

                    <!-- Date Filter could be added here -->
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                     <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Content="Làm mới"
                            Click="Refresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Gallery Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
            <ItemsControl x:Name="GalleryItems">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ScreenshotItemStyle}" MouseLeftButtonUp="Screenshot_Click" Tag="{Binding}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Thumbnail -->
                                <Image Grid.Row="0" Source="{Binding FilePath}" Stretch="Uniform" Margin="4"/>

                                <!-- Info -->
                                <Border Grid.Row="1" Background="#F9F9F9" Padding="8" CornerRadius="0,0,4,4">
                                    <StackPanel>
                                        <TextBlock Text="{Binding StudentName}" FontWeight="Bold" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding CapturedAt, StringFormat='HH:mm:ss dd/MM'}" FontSize="11" Foreground="#757575"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel Grid.Row="1" x:Name="EmptyState" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
            <materialDesign:PackIcon Kind="ImageOff" Width="48" Height="48" Foreground="#CCC"/>
            <TextBlock Text="Không có ảnh chụp nào" Margin="0,16,0,0" Foreground="#999"/>
        </StackPanel>
    </Grid>
</Window>
