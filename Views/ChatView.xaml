
<UserControl x:Class="ClassroomManagement.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="MessageBubbleStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="MaxWidth" Value="400"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F3F4F6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar: Conversations -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="15">
                    <TextBlock Text="Tin nháº¯n" FontSize="20" FontWeight="Bold" Foreground="#111827"/>
                    <Button x:Name="CreateGroupBtn" Content="+ NhÃ³m má»›i" Margin="0,10,0,0"
                            Padding="10,6" Background="#EFF6FF" Foreground="#2563EB" BorderThickness="0"
                            HorizontalContentAlignment="Left" Cursor="Hand" Click="CreateGroupBtn_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <ListBox x:Name="ConversationList" Grid.Row="1" BorderThickness="0" Background="Transparent"
                         SelectionChanged="ConversationList_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#DBEAFE"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Avatar Placeholder -->
                                <Border Width="36" Height="36" CornerRadius="18" Background="#E0E7FF">
                                    <TextBlock Text="{Binding Name[0]}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Foreground="#4F46E5" FontWeight="Bold"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="Medium" Foreground="#1F2937"/>
                                    <TextBlock Text="{Binding LastMessage}" FontSize="12" Foreground="#6B7280"
                                               TextTrimming="CharacterEllipsis" MaxWidth="160"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Main Chat Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="20,0">
                <Grid>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock x:Name="ChatTitleText" Text="Lá»›p há»c chung" FontSize="16" FontWeight="Bold" Foreground="#111827"/>
                        <TextBlock x:Name="ChatSubtitleText" Text="â€¢ 32 thÃ nh viÃªn" Margin="10,0,0,0"
                                   FontSize="13" Foreground="#10B981" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Messages List -->
            <ListView x:Name="MessageList" Grid.Row="1" Background="Transparent" BorderThickness="0"
                      Padding="20" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="0,4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <!-- Sender Name (Hidden for self, handled in code/trigger easier?) -->
                            <!-- We will use a Grid with conditional columns or simply HorizontalAlignment on a Wrapper -->

                            <!-- Bubble -->
                            <Border x:Name="BubbleBorder" Style="{StaticResource MessageBubbleStyle}" HorizontalAlignment="Left" Background="White">
                                <StackPanel>
                                    <TextBlock x:Name="SenderNameTxt" Text="{Binding SenderName}" FontSize="11" Foreground="#9CA3AF" Margin="0,0,0,4"/>

                                    <!-- Content Switcher -->
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.ContentTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <!-- Text Content -->
                                                    <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Foreground="#1F2937"
                                                               Visibility="{Binding ContentType, Converter={StaticResource BoolToVis}, ConverterParameter=text}"/> <!-- Note: Need ValueConverter, workaround: CodeBehind logic easier -->

                                                </StackPanel>
                                            </DataTemplate>
                                        </ContentControl.ContentTemplate>
                                    </ContentControl>

                                     <!-- Image (Hardcoded visibility workaround in code behind or use simple triggers) -->
                                     <Image x:Name="ImgContent" Source="{Binding AttachmentPath}" MaxHeight="300" MaxWidth="300" Stretch="Uniform" Visibility="Collapsed"/>
                                     <TextBlock x:Name="TxtContent" Text="{Binding Content}" TextWrapping="Wrap" Foreground="#1F2937"/>

                                     <TextBlock Text="{Binding CreatedAt, StringFormat=HH:mm}" FontSize="10" Foreground="#D1D5DB" HorizontalAlignment="Right" Margin="10,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <DataTemplate.Triggers>
                            <!-- Self Message -->
                            <DataTrigger Binding="{Binding IsMine}" Value="True">
                                <Setter TargetName="BubbleBorder" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="BubbleBorder" Property="Background" Value="#3B82F6"/>
                                <Setter TargetName="TxtContent" Property="Foreground" Value="White"/>
                                <Setter TargetName="SenderNameTxt" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>

                            <!-- Image Message -->
                            <DataTrigger Binding="{Binding ContentType}" Value="image">
                                <Setter TargetName="ImgContent" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="TxtContent" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="BubbleBorder" Property="Background" Value="Transparent"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Input Area -->
            <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="AttachBtn" Content="ðŸ“·" Width="36" Height="36" Margin="0,0,10,0"
                            Background="Transparent" BorderBrush="#E5E7EB" BorderThickness="1"
                            Foreground="#6B7280" Click="AttachBtn_Click">
                         <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="18"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <TextBox x:Name="InputBox" Grid.Column="1" Padding="10" VerticalContentAlignment="Center"
                             BorderBrush="#E5E7EB" BorderThickness="1" Background="#F9FAFB"
                             KeyDown="InputBox_KeyDown">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Button x:Name="SendBtn" Content="Gá»­i" Grid.Column="2" Padding="20,0" Margin="10,0,0,0" Height="36"
                            Background="#3B82F6" Foreground="White" BorderThickness="0" Click="SendBtn_Click">
                         <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="18"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
