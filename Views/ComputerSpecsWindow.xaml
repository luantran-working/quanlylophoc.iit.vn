<Window x:Class="ClassroomManagement.Views.ComputerSpecsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Chi tiết cấu hình phần cứng" Height="650" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <materialDesign:PackIcon Kind="Monitor" Width="40" Height="40" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <StackPanel Margin="16,0,0,0">
                <TextBlock Text="{Binding StudentName}" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
                <TextBlock Text="{Binding Specs.ComputerName, StringFormat=Computer Name: {0}}" Foreground="#757575"/>
            </StackPanel>
        </StackPanel>

        <TabControl Grid.Row="2" materialDesign:NavigationRailAssist.ShowSelectionBackground="True">
            <TabItem Header="THÔNG TIN CHUNG">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.Resources>
                                <Style TargetType="TextBlock" x:Key="LabelStyle">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#757575"/>
                                    <Setter Property="Margin" Value="0,8"/>
                                </Style>
                                <Style TargetType="TextBlock" x:Key="ValueStyle">
                                    <Setter Property="Margin" Value="0,8"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </Grid.Resources>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="OS Version:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="CPU:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="RAM:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="GPU:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="Mainboard:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="BIOS Version:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="Monitor:" Style="{StaticResource LabelStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Specs.OS}" Style="{StaticResource ValueStyle}"/>
                                <TextBlock Text="{Binding Specs.CPU}" Style="{StaticResource ValueStyle}"/>
                                <TextBlock Text="{Binding Specs.RAMTotalGB, StringFormat={}{0} GB}" Style="{StaticResource ValueStyle}"/>
                                <TextBlock Text="{Binding Specs.GPU}" Style="{StaticResource ValueStyle}"/>
                                <TextBlock Text="{Binding Specs.Motherboard}" Style="{StaticResource ValueStyle}"/>
                                <TextBlock Text="{Binding Specs.BIOS}" Style="{StaticResource ValueStyle}"/>
                                <TextBlock Text="{Binding Specs.Monitor}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="LƯU TRỮ (DRIVES)">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Drives}" Margin="16">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <Grid>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Harddrive" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                            </StackPanel>
                                            <TextBlock HorizontalAlignment="Right">
                                                <Run Text="{Binding FreeSpaceGB}" Foreground="{DynamicResource PrimaryHueMidBrush}" FontWeight="Bold"/>
                                                <Run Text=" / "/>
                                                <Run Text="{Binding TotalSizeGB}"/> GB Free
                                            </TextBlock>
                                        </Grid>
                                        <ProgressBar Value="{Binding UsedPercent}" Height="12" Margin="0,12,0,8"
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                     Background="#F0F0F0"/>
                                        <Grid>
                                             <TextBlock Text="{Binding TotalSizeGB, StringFormat=Total: {0} GB}" FontSize="12" Foreground="#999"/>
                                             <TextBlock Text="{Binding UsedPercent, StringFormat={}Used {0:F1}%}"
                                                        FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </StackPanel>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <Button Grid.Row="3" Content="ĐÓNG" IsCancel="True" Click="Close_Click"
                HorizontalAlignment="Right" Margin="0,16,0,0" Style="{StaticResource MaterialDesignPaperButton}"/>
    </Grid>
</Window>
