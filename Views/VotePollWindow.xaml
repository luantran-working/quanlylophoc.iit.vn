<Window x:Class="ClassroomManagement.Views.VotePollWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Bình Chọn" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        Topmost="True"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="2">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="CÂU HỎI BÌNH CHỌN" Style="{StaticResource MaterialDesignHeadline6TextBlock}" HorizontalAlignment="Center" Margin="0,0,0,16"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <TextBlock x:Name="QuestionText" Text="Câu hỏi..." FontSize="18" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,24"/>

                <ItemsControl x:Name="OptionsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Text}" Margin="0,0,0,16" Height="50" FontSize="16"
                                    Click="Option_Click" Tag="{Binding Id}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <TextBlock Grid.Row="2" Text="Vui lòng chọn một đáp án" FontStyle="Italic" HorizontalAlignment="Center" Foreground="Gray"/>
    </Grid>
</Window>
